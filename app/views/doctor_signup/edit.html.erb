<h2>Edit Personal Information</h2>
<%= form_for(@user , url: doctor_edit_path) do |f| %>
  <%= f.fields_for(:role, @user.role) do |ff| %>
    <%= ff.label "Specialty:" %>
    <%= ff.collection_select(:specialty, Specialty.all, :id, :name) %>
    <br>
    <br>
    Location City, State: <%= ff.text_field :location_city %>
    <br>
    <br>
    How many years have you been in practice? <%= ff.number_field :years_in_practice %>
    <br>
    <br>
    First Name: <%= ff.text_field :first_name %>
    <br>
    <br>
    Last Name: <%= ff.text_field :last_name %>
  <% end %>
  <br>
  <br>
  <%= f.label "E-Mail:" %>
  <%= f.text_field(:email, id: "email") %>
  <br>
  <br>
  <%= f.label "Password:" %>
  <%= f.password_field(:password, id: "password") %>
  <br>
  <br>
  Confirm Password: <%= f.password_field(:password_confirmation, id: "password_confirmation") %>
  <br>
  <br>
  <br>
  <%= f.submit "Update My Information"%>
<% end %>
