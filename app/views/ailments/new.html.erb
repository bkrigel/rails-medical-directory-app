<h2>Report New Ailment</h2>
<%= form_for @ailment do |f| %>
  <%= f.label "When did you first notice the issue?" %>
  <br>
  <%= f.date_field(:first_noticed_on, id: "first_noticed_on") %>
  <br>
  <br>
  Brief Description:
  <br>
  <%= f.text_area(:description, id: "description") %>
  <br>
  <br>
  <br>
  <%= f.submit "Report Ailment" %>
<% end %>
